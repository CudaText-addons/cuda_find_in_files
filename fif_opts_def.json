[
    {   "cmt": "Copy options [.*], [aA], [\"w\"] from CudaText dialog to plugin's dialog",
        "def": false,
        "frm": "bool",
        "opt": "fif_use_edfind_opt_on_start",
        "chp": "Start",
        "tgs": ["start", "settings"]
    },
    {   "cmt": "Use selection-text from current file when dialog opens",
        "def": false,
        "frm": "bool",
        "opt": "fif_use_selection_on_start",
        "chp": "Start",
        "tgs": ["start"]
    },

    {   "cmt": "List of lexer names to set for report file",
        "def": [
            "Search results",
            "FiF"
        ],
        "frm": "json",
        "opt": "fif_lexers",
        "chp": "Report",
        "tgs": ["lexer", "report"]
    },
    {   "cmt": ["If True then one ESC stop all stages.",
                    "If False - only current stage."],
        "def": false,
        "frm": "bool",
        "opt": "fif_esc_full_stop",
        "chp": "Searching",
        "tgs": ["searching", "stop"]
    },

    {   "cmt": ["Appends N nearest lines to report (if [x]\"Show context\").",
                    "So, 2*N+1 lines will be reported for each found line.",
                    "Also see options:",
                    "  fif_context_width_before",
                    "  fif_context_width_after"],
        "def": 1,
        "frm": "int",
        "opt": "fif_context_width",
        "chp": "Report",
        "tgs": ["report", "context"]
    },
    {   "cmt": "Appends N previous lines to report (if [x]\"Show context\").",
        "def": 1,
        "frm": "int",
        "opt": "fif_context_width_before",
        "chp": "Report",
        "tgs": ["report", "context"]
    },
    {   "cmt": "Appends N next lines to report (if [x]\"Show context\").",
        "def": 1,
        "frm": "int",
        "opt": "fif_context_width_after",
        "chp": "Report",
        "tgs": ["report", "context"]
    },
    {   "cmt": "Show report if nothing found",
        "def": false,
        "frm": "bool",
        "opt": "fif_report_no_matches",
        "chp": "Report",
        "tgs": ["report", "comfort"]
    },
    {   "cmt": "[x]Append: Need to fold previous results",
        "def": false,
        "frm": "bool",
        "opt": "fif_fold_prev_res",
        "chp": "Report",
        "tgs": ["report", "append", "comfort"]
    },
    {   "cmt": "Close dialog if search has found matches",
        "def": false,
        "frm": "bool",
        "opt": "fif_hide_if_success",
        "chp": "",
        "tgs": ["comfort"]
    },
    {   "cmt": "Length of substring (of field \"Find\") which appears in title of the search result",
        "def": 10,
        "frm": "int",
        "opt": "fif_len_target_in_title",
        "chp": "Report",
        "tgs": ["report", "comfort"]
    },
    {   "cmt": "Save report after filling if tab has filename",
        "def": false,
        "frm": "bool",
        "opt": "fif_auto_save_if_file",
        "chp": "Report",
        "tgs": ["report", "file"]
    },
    {   "cmt": "Activate tab with report after filling",
        "def": true,
        "frm": "bool",
        "opt": "fif_focus_to_rpt",
        "chp": "Report",
        "tgs": ["report", "comfort"]
    },
    {   "cmt": ["Save all request details (\"Find\", \"In folder\", …) in first line of result file.",
                    "The info will be used in command \"Repeat search for this report-tab\"."],
        "def": false,
        "frm": "bool",
        "opt": "fif_save_request_to_rpt",
        "chp": "Report",
        "tgs": ["report", "comfort"]
    },

    {   "cmt": "Size of buffer (at file start) to detect binary files",
        "def": 1024,
        "frm": "int",
        "opt": "fif_read_head_size(bytes)",
        "chp": "Searching",
        "tgs": ["searching", "internal"]
    },
    {   "cmt": "Skip too big files (0 - don't skip)",
        "def": 0,
        "frm": "int",
        "opt": "fif_skip_file_size_more_Kb",
        "chp": "Searching",
        "tgs": ["searching", "scope"]
    },
    {   "cmt": ["Default encoding to read files.",
                    "If value is empty then will be used",
                    "  cp1252 for Linux,",
                    "  preferred encoding from locale for others (Win, Mac, …)."],
        "def": "",
        "frm": "str",
        "opt": "fif_locale_encoding",
        "chp": "Searching",
        "tgs": ["searching", "internal", "encoding"]
    },

    {   "cmt": ["Style which marks found fragment in report",
                    "Color values: \"\" - skip, \"#RRGGBB\" - hex-digits",
                    "Values for border sides: \"solid\", \"dash\", \"2px\", \"dotted\", \"rounded\", \"wave\""],
        "def": {"borders": {"bottom": "dotted"}},
        "frm": "json",
        "opt": "fif_mark_style",
        "chp": "Report",
        "tgs": ["report", "mark"]
    },
    {   "cmt": ["Style which marks replaced fragment in report",
                    "Color values: \"\" - skip, \"#RRGGBB\" - hex-digits",
                    "Values for border sides: \"solid\", \"dash\", \"2px\", \"dotted\", \"rounded\", \"wave\""],
        "def": {"borders": {"bottom":"wave"},"color_border":"#777"},
        "frm": "json",
        "opt": "fif_mark_false_replace_style",
        "chp": "Report",
        "tgs": ["report", "mark"]
    },
    {   "cmt": ["Style which marks replaced fragment in report",
                    "Color values: \"\" - skip, \"#RRGGBB\" - hex-digits",
                    "Values for border sides: \"solid\", \"dash\", \"2px\", \"dotted\", \"rounded\", \"wave\""],
        "def": {"borders": {"bottom": "solid"}},
        "frm": "json",
        "opt": "fif_mark_true_replace_style",
        "chp": "Report",
        "tgs": ["report", "mark"]
    },

    {   "cmt": "Permit to log for all parts",
        "def": false,
        "frm": "bool",
        "opt": "fif_LOG",
        "chp": "Logging",
        "tgs": ["log", "internal"]
    },
    {   "cmt": "Log searching part",
        "def": false,
        "frm": "bool",
        "opt": "fif_FNDLOG",
        "chp": "Logging",
        "tgs": ["log", "internal"]
    },
    {   "cmt": "Log reporting part",
        "def": false,
        "frm": "bool",
        "opt": "fif_RPTLOG",
        "chp": "Logging",
        "tgs": ["log", "internal"]
    },
    {   "cmt": "Log navigation part",
        "def": false,
        "frm": "bool",
        "opt": "fif_NAVLOG",
        "chp": "Logging",
        "tgs": ["log", "internal"]
    },
    {   "cmt": "Append internal data to report",
        "def": false,
        "frm": "bool",
        "opt": "fif_DBG_data_to_report",
        "chp": "Logging",
        "tgs": ["log", "internal"]
    },
    {   "cmt": "Log to file (if not empty)",
        "def": "",
        "frm": "file",
        "opt": "fif_log_file",
        "chp": "Logging",
        "tgs": ["log", "internal"]
    },
    {   "cmt": "Need to log about failed reading",
        "def": false,
        "frm": "bool",
        "opt": "fif_log_encoding_fail",
        "chp": "Logging",
        "tgs": ["log", "internal", "encoding"]
    }
]